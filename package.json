{
  "name": "element-components",
  "version": "1.3.1",
  "author": "Zehui Chan <jasonchenzehui@gmail.com>",
  "main": "dist/ElementComponents.umd.min.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "vue-cli-service serve",
    "build:docs": "vue-cli-service build",
    "build:lib": "vue-cli-service build --target lib --name ElementComponents --dest ./dist/ ./lib/index.js",
    "build": "npm run build:lib && npm run build:docs",
    "publish ": "npm publish",
    "unpublish ": "npm unpublish --force",
    "release": "release-it && git push --follow-tags origin main"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:zehuichan/element-components.git"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "file-saver": "^2.0.5",
    "jszip": "^3.6.0",
    "lodash.chunk": "^4.2.0",
    "qrcode": "^1.4.4",
    "wangeditor": "^4.6.17",
    "xlsx": "^0.16.9"
  },
  "devDependencies": {
    "@riophae/vue-treeselect": "^0.4.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "compression-webpack-plugin": "6.1.1",
    "element-ui": "^2.15.1",
    "highlight.js": "^10.7.2",
    "release-it": "^14.6.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "vue": "^2.6.12",
    "vue-router": "^3.5.1",
    "vue-template-compiler": "^2.6.12"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "push": false,
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    }
  }
}
